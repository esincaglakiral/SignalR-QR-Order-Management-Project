@using SignalRWebUI.Dtos.MenuTableDtos
@model CreateMenuTableDto
@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Masa Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="status">Masa Durumu</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true">Dolu</option>
                                    <option value="false">Boş</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Masayı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

