@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Öne Çıkan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Öne Çıkan alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane Öne Çıkan alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık 1</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col">Başlık 2</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Başlık 3</th>
									<th scope="col">Açıklama 3</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title1</td>
										<td>@item.Description1</td>
										<td>@item.Title2</td>
										<td>@item.Description2</td>
										<td>@item.Title3</td>
										<td>@item.Description3</td>
										<td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-info">Güncelle</a></td>
										<td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Feature/CreateFeature/" class="btn btn-outline-primary">Yeni Öne Çıkan Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



